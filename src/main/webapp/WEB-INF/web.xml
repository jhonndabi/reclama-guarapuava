<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.FACELETS_REFRESH_PERIOD</param-name>
        <param-value>0</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
        <welcome-file>index.jsf</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- TO LOGIN -->
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/view/login.xhtml</form-login-page>
            <form-error-page>/view/errors/login-error.xhtml</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <role-name>ADM</role-name>
    </security-role>
    <security-role>
        <role-name>USER</role-name>
    </security-role>

    <security-constraint>
        <display-name>Segurança para o diretório de admin</display-name>
        <web-resource-collection>
            <web-resource-name>Somente Administração</web-resource-name>
            <url-pattern>/view/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADM</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>Segurança para diretórios</display-name>
        <web-resource-collection>
            <web-resource-name>Todos os usuários autenticados</web-resource-name>
            <url-pattern>/view/bairros/*</url-pattern>
            <url-pattern>/view/ocorrencias/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADM</role-name>
            <role-name>USER</role-name>
        </auth-constraint>
    </security-constraint>

    <error-page>
        <error-code>404</error-code>
        <location>/view/errors/404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/view/errors/403.xhtml</location>
    </error-page>
    <!-- FONT AWESOME DO BOOTSTRAP-->
    <context-param>
        <param-name>primefaces.FONT_AWESOME</param-name>
        <param-value>true</param-value>
    </context-param>
</web-app>
